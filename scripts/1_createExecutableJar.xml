<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<project name="Create Runnable Jar for Project hogandiff3 with libraries in sub-folder">
	<!--this file was created by Eclipse Runnable JAR Export Wizard-->
	<!--ANT 1.7 is required                                        -->

	<!--define app properties-->
	<property name="app.version" value="0.7.3" />

	<property name="poi" value="poi-4.1.2" />

	<property name="dir.pjhome" value=".." />
	<property name="dir.userlib" value="C:/UserLibs" />
	<property name="dir.out.jarfile" value="${dir.pjhome}/build/jar" />
	<property name="dir.out.product" value="${dir.pjhome}/build/方眼Diff-${app.version}" />
	<property name="dir.out.lib" value="${dir.out.product}/lib" />

	<target name="delete_dirs">
		<delete dir="${dir.out.product}" />
	</target>

	<target name="copy_files">
		<copy todir="${dir.out.product}" file="${dir.pjhome}/README.md" />
		<copy todir="${dir.out.product}" file="${dir.pjhome}/LICENSE" />

		<copy todir="${dir.out.lib}/${poi}" file="${dir.userlib}/${poi}/LICENSE" />
		<copy todir="${dir.out.lib}/${poi}" file="${dir.userlib}/${poi}/NOTICE" />
		<copy todir="${dir.out.lib}/${poi}" file="${dir.userlib}/${poi}/poi-4.1.2.jar" />
		<copy todir="${dir.out.lib}/${poi}" file="${dir.userlib}/${poi}/poi-ooxml-4.1.2.jar" />
		<copy todir="${dir.out.lib}/${poi}" file="${dir.userlib}/${poi}/poi-ooxml-schemas-4.1.2.jar" />
		<copy todir="${dir.out.lib}/${poi}/lib" file="${dir.userlib}/${poi}/lib/commons-codec-1.13.jar" />
		<copy todir="${dir.out.lib}/${poi}/lib" file="${dir.userlib}/${poi}/lib/commons-collections4-4.4.jar" />
		<copy todir="${dir.out.lib}/${poi}/lib" file="${dir.userlib}/${poi}/lib/commons-compress-1.19.jar" />
		<copy todir="${dir.out.lib}/${poi}/lib" file="${dir.userlib}/${poi}/lib/commons-math3-3.6.1.jar" />
		<copy todir="${dir.out.lib}/${poi}/lib" file="${dir.userlib}/${poi}/lib/SparseBitSet-1.2.jar" />
		<copy todir="${dir.out.lib}/${poi}/ooxml-lib" file="${dir.userlib}/${poi}/ooxml-lib/xmlbeans-3.1.0.jar" />
	</target>
</project>
